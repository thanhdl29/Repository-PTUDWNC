@model TatBlog.WebApp.Areas.Admin.Models.PostFilterModel
@{
	ViewData["PageTitle"] = "Danh sách bài viết";
	var postsList = ViewBag.PostsList as IPagedList<Post>;
}
<h1>
	Danh sách bài viết
</h1>
<!--Hiển thị form để tìm bài viết-->
<partial name="_PostFilterPane" model="Model" />
@if(postsList != null && postsList.Count > 0)
{
	<table class="table table-responsive table-striped">
		<thead>
			<tr>
				<th>Tiêu đề</th>
				<th>Tác giả</th>
				<th>Chủ đề</th>
				<th>Xuất bản</th>
				
			</tr>
		</thead>
		<tbody>
			@foreach(var post in postsList)
			{
				<tr>
					<td>
						<a asp-area="Admin"
							asp-controller="Posts"
							asp-action="Edit"
							asp-route-id="@post.Id"
							class="text-bold">
							@post.Title

						</a>
						<p class="test-muted">
							@post.ShortDescription
						</p>
					</td>
					<td>
						@post.Author.FullName
					</td>
					<td>
						@post.Category.Name
					</td>
					@*<td>
						@(post.Published ? "Có" : "Không")
					</td>*@
					<td>
						<a asp-area="Admin"
						   asp-controller="Posts"
						   asp-action="ChangePublishStatus"
						   asp-route-id="@post.Id"
						   class="btn btn-secondary">
							@(post.Published ? "Có" : "Không")
						</a>
					</td>
					@*<td>
						<a asp-area="Admin"
							asp-controller="Posts"
							asp-action="ChangePublishStatus"
							asp-route-id="@post.Id"
							 class="btn  btn-danger">
							Xoá
						</a>
					</td>*@
					
					<td>
						<a  asp-area="Admin"
							asp-controller="Posts"
							asp-action="DeletePosts"
							asp-route-id="@post.Id"
							class="btn btn-danger"
							onclick="return confirm('Bạn có chắc chắn muốn xoá bài post này không?')">Xoá</a>
					</td>
						
				</tr>
				
				
			}
		</tbody>

	</table>
	
}
else
{
	<h1 class="text-danger">
		Không tìm thấy bài viết nào
	</h1>
}
<partial name="_Pager" model="postsList" />


